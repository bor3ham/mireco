.MIRECO-time-selector
  display: flex
  flex-direction: row
  overflow: hidden

  position: relative
  &:before
    content: ' '
    z-index: 1
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 25%
    background: linear-gradient(180deg, #fff, rgba(1, 1, 1, 0))
  &:after
    content: ' '
    z-index: 1
    position: absolute
    bottom: 0
    left: 0
    width: 100%
    height: 25%
    background: linear-gradient(0deg, #fff, rgba(1, 1, 1, 0))

  ul
    flex: 1
    list-style: none
    padding: 0 2px
    margin: 0
    width: 5rem
    height: 100%
    box-sizing: border-box
    overflow-y: scroll
    -ms-overflow-style: none
    scrollbar-width: none
    &::-webkit-scrollbar
      display: none

    li
      padding: 0
      margin: 0
      button
        border-radius: 4px
        position: relative
        margin: 0
        padding: 0 (standard-padding)
        background: none
        color: content-foreground
        margin: 0
        display: block
        width: 100%
        text-align: center
        outline: none
        border: none
        font-size: (standard-font-size * 0.8)
        line-height: standard-line-height
        white-space: nowrap
        &:not(:disabled):not(.disabled)
          cursor: pointer
          &:hover
            color: content-foreground
            background: content-faint
      &.invalid
        opacity: 0.1

      &.highlight
        button:after
          content: ' '
          position: absolute
          top: -1px
          left: -1px
          right: -1px
          bottom: -1px
          border-left: 1px dashed secondary-colour
          border-right: 1px dashed secondary-colour
        &.first-highlight button:after
          border-top: 1px dashed secondary-colour
          border-top-left-radius: edge-rounding
          border-top-right-radius: edge-rounding
        &.last-highlight button:after
          border-bottom: 1px dashed secondary-colour
          border-bottom-left-radius: edge-rounding
          border-bottom-right-radius: edge-rounding
      &.current
        button
          background: primary-colour
          color: primary-content-colour
      &:not(.current).selected
        button
          background: alpha(primary-colour, 0.2)
      &.selected
        &.first-selected button
          border-top-left-radius: edge-rounding
          border-top-right-radius: edge-rounding
        &.last-selected button
          border-bottom-left-radius: edge-rounding
          border-bottom-right-radius: edge-rounding
