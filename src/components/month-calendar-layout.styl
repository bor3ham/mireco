.MIRECO-month-calendar
  display: flex
  flex-direction: column
  align-items: stretch
  background: content-background

  ol.months
    list-style: none
    margin: 0
    padding: 0
    display: grid
    grid-template-columns: repeat(3, 1fr)

    li
      display: flex
      margin: 0
      padding: 0
      button
        flex: 1
        padding: 0.5rem 0 
