.MIRECO-month-calendar
  display: flex
  flex-direction: column
  align-items: stretch
  background: content-background

  >.calendar-header
    display: flex
    flex-direction: row
    align-items: center
    h5
      flex: 1

  ol.months
    list-style: none
    margin: 0
    padding: 0
    display: grid
    grid-template-columns: repeat(3, 1fr)

    li
      display: flex
      margin: 0
      padding: 0
      button
        flex: 1
        padding: 0.5rem 0 
