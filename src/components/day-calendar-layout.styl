.MIRECO-day-calendar
  display: flex
  flex-direction: column
  align-items: stretch
  background: content-background

  >.calendar-header
    display: flex
    flex-direction: row
    align-items: center
    h5
      flex: 1

  >table
    flex: 1
    display: flex
    tbody
      display: flex
      flex: 1
      flex-direction: column
      tr
        flex: 1
        display: flex
        flex-direction: row
        td, th
          flex: 1
        td
          display: flex
          button
            flex: 1
