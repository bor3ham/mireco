.MIRECO-dropdown
  color: content-foreground
  list-style: none
  margin: 0
  padding: 0
  min-width: 5rem
  max-width: 15rem
  max-height: 15rem
  overflow-y: auto
  overflow-x: hidden

  &:focus
    outline: none

  &.disabled
    background: content-faint

  li
    margin: 0
    padding: 0
    display: block
    button, &.none
      margin: 0
      padding: (standard-padding / 2) (standard-padding)
      background: none
      color: content-foreground
      margin: 0
      display: block
      width: 100%
      text-align: left
      outline: none
      border: none
      font-size: (standard-font-size * 0.8)
      line-height: standard-line-height
      white-space: nowrap
    button
      &:not(:disabled)
        cursor: pointer
    button:not(:disabled):hover
      color: primary-colour
    &.current button
      background: primary-colour
      color: primary-content-colour
      &:not(:disabled):hover
        color: primary-content-colour
