// sizing
standard-padding ?= 1rem
standard-font-size ?= 1rem
standard-line-height ?= 1.2em
edge-rounding ?= 0.15rem
thin-line ?= 0.05rem
text-space-width ?= 0.35rem

// colours
primary-colour ?= #007bff
primary-content-colour ?= #fff
secondary-colour ?= #17a2b8
primary-content-colour ?= #fff
content-foreground ?= #333
content-background ?= #fff
content-muted ?= #666
content-soft ?= #9a9a9a
content-faint ?= #eee

primary-button-colour ?= primary-colour
primary-button-content-colour ?= primary-content-colour
secondary-button-colour ?= secondary-colour
secondary-button-content-colour ?= secondary-content-colour
link-colour ?= primary-colour

// interaction
hover-highlight ?= 10%
interact-highlight ?= 15%

// fonts
standard-font-families ?= Helvetica, Arial, sans-serif
standard-font-weight ?= 500

// mixins
input-focus()
  box-shadow: 0 0 0 (thin-line * 2) transparent, 0 0 0 (thin-line * 2) rgba(0, 0, 0, 0.2)
popover-shadow()
  box-shadow: 0px 0.2rem 0.5rem rgba(0, 0, 0, 0.3)
input-textaligned-padding(padding)
  padding: (padding / 2)
  padding-top: (padding / 2) * 1.2
  padding-bottom: (padding / 2) * 0.8
