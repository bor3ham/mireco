.MIRECO-button
  display: inline-block
  border-radius: edge-rounding
  padding: (standard-padding / 2) standard-padding
  border: none
  outline: none
  font-family: standard-font-families
  font-weight: standard-font-weight
  font-size: standard-font-size
  line-height: standard-line-height
  cursor: pointer
  user-select: none

  &:focus
    box-shadow: inset 0 0 0 thin-line transparent, 0 0 0 edge-rounding content-faint

  background: primary-colour
  color: primary-content-colour
  &:hover
    background: primary-colour + hover-highlight
  &:active
    background: primary-colour + interact-highlight

  &.secondary
    background: secondary-colour
    color: secondary-content-colour
    &:hover
      background: secondary-colour + hover-highlight
    &:active
      background: secondary-colour + interact-highlight
