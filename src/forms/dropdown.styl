.MIRECO-dropdown
  position: absolute
  left: 0
  top: 100%
  background: content-background
  color: content-foreground
  list-style: none
  margin: 0
  padding: 0
  box-shadow: 0px 0.5rem 0.5rem rgba(0, 0, 0, 0.2)
  border-radius: edge-rounding
  border: thin-line solid content-muted
  max-width: 15rem
  max-height: 15rem
  overflow-y: auto
  overflow-x: hidden
  margin-top: -(thin-line)
  
  &:focus
    outline: none

  &.disabled
    background: content-faint

  li
    margin: 0
    padding: 0
    display: block
    button
      margin: 0
      padding: (standard-padding / 2) standard-padding
      background: none
      color: content-foreground
      margin: 0
      display: block
      outline: none
      border: none
      font-size: standard-font-size
      line-height: standard-line-height
      &:not(:disabled)
        cursor: pointer
    button:not(:disabled):hover, &.current button
      background: rgba(0, 0, 0, 0.05)
