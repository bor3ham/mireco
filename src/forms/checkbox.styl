size = standard-font-size

.MIRECO-checkbox
  width: 0
  height: 0
  margin: 0
  position: absolute
  opacity: 0

  &+svg
    display: inline-block
    vertical-align: sub
    border: thin-line solid content-border-line
    border-radius: edge-rounding
    width: size
    height: size

  &+svg path
    stroke: content-soft-line
    stroke-opacity: 0.25
  &:hover+svg
    border-color: primary-colour + hover-highlight
    path
      stroke: primary-colour + hover-highlight
  &:checked+svg path
    stroke: primary-colour
    stroke-opacity: 1

  &:focus+svg
    box-shadow: inset 0 0 0 thin-line transparent, 0 0 0 edge-rounding content-faint-line
