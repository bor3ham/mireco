.MIRECO-datetime-range
  position: relative

  > .MIRECO-datetime-range-controls
    position: absolute
    z-index: 100
    left: 0
    top: 100%
    display: flex
    flex-direction: column
  &.right-hang>.MIRECO-datetime-range-controls
    left: auto
    right: 0
  
  .MIRECO-datetime-range-header
    text-align: center

  .MIRECO-datetime-range-body
    display: flex
    flex-direction: row

  p
    display: inline
    margin-right: 0.8rem
