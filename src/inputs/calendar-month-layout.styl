.MIRECO-calendar-month
  &.block
    margin-bottom: standard-padding

  position: relative

  > .MIRECO-month-calendar
    position: absolute
    z-index: 100
    left: 0
    top: 100%
  &.right-hang>.MIRECO-month-calendar
    left: auto
    right: 0

  &:not(.block)
    >.MIRECO-text
      max-width: 8rem
