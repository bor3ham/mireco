.MIRECO-datetime
  &.block
    display: flex
    flex-wrap: wrap
    margin-right: -1 * text-space-width

    >:first-child
      &.MIRECO-date
        flex-basis: 9rem
      &.MIRECO-time
        flex-basis: 7rem
      flex-grow: 1
      margin-right: text-space-width
    div.second
      margin-right: text-space-width
      white-space: pre
      &.date
        flex-basis: 12rem
      &.time
        flex-basis: 10rem
      flex-grow: 1
      align-items: flex-start
      display: flex
      .MIRECO-time, .MIRECO-date
        flex: 1

  &:focus
    outline: none
