.MIRECO-datetime-range
  span.to
    margin-top: text-space-width
    white-space: pre-wrap
  div.duration-inner
    display: flex
    align-items: flex-start
    input.MIRECO-text
      flex: 1
      margin-right: text-space-width

  &.block
    display: flex
    flex-wrap: wrap
    margin-left: -1 * text-space-width

    div.MIRECO-datetime, div.duration-container
      margin-left: text-space-width

    >div.MIRECO-datetime, div.datetime-range-second, div.duration-container
      flex-basis: 24rem
      flex-grow: 1
    div.datetime-range-second
      display: flex
      div.MIRECO-datetime
        flex: 1
