.MIRECO-date
  &.block
    margin-bottom: standard-padding

  position: relative
  &:focus
    outline: none

  &:not(.block)
    >.MIRECO-text
      max-width: 8rem

  >.MIRECO-calendar
    position: absolute
    z-index: 100
    left: 0
    top: 100%
  &.right-hang>.MIRECO-calendar
    left: auto
    right: 0
