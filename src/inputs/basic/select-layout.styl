.MIRECO-select
  &:not(.sized)
    width: 100%
    max-width: 15rem
    min-width: 0

  display: inline-block
  &.block
    display: block
    width: 100%
    max-width: none
    min-width: 0

  position: relative

  > div
    position: relative
    width: 100%
    > .MIRECO-clear-button
      position: absolute
      right: 0
      top: 50%
      transform: translateY(-50%)
    > svg
      position: absolute
      right: 0
      top: 50%
      margin-top: -12px
      pointer-events: none

  > .MIRECO-dropdown
    max-width: none
    right: 0
