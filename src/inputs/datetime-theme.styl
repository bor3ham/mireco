.MIRECO-datetime
  &.in-focus
    input-focus()
  
  &.disabled
    border-color: content-muted !important
    background: content-faint !important

  .MIRECO-text
    border: none
    background: none
  
  > .MIRECO-datetime-controls
    border-radius: edge-rounding
    border: thin-line solid content-muted
    margin-top: -(thin-line)
    popover-shadow()
  
    .MIRECO-day-calendar
      border-right: thin-line solid content-muted

  padding-right: (standard-padding / 2)
  &.clearable
    padding-right: "calc(%s + 24px)" % (standard-padding / 2)
  > .MIRECO-clear-button
    background: none !important
    border: none !important
    right: 0

  > svg
    right: (standard-padding / 4)
  
  p
    opacity: 0.5
  
  &.has-icon
    padding-right: "calc(%s + 24px)" % (standard-padding / 2)
    &.clearable
      padding-right: "calc(%s + 48px)" % standard-padding
    > .MIRECO-clear-button
      right: "calc(%s + 24px)" % (standard-padding / 2)
    &:after
      content: ' '
      position: absolute
      right: "calc(%s + 24px)" % (standard-padding / 2)
      height: calc(100% - 12px)
      top: 6px
      border-right: thin-line solid content-muted
