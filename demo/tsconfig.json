{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "esnext",
    "types": [],
    "baseUrl": "src",
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "mireco": ["../.."]
    }
  }
}
